{
  "env": {
    "es6": false,
    "amd": false,
    "browser": true,
    "jasmine": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "Pathformer": true,
    "Vivus": true,
    "window": true,
    "document": true,
    "define": true,
    "jasmine": true,
    "it": true,
    "expect": true,
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "spyOn": true
  },
  "rules": {
    "no-cond-assign": 2,
    "no-console": 0,
    "no-const-assign": 2,
    "no-class-assign": 2,
    "no-this-before-super": 2,
    "no-unused-vars": 1,
    "no-empty": 0,
    "object-shorthand": [2, "always"]
  }
}
